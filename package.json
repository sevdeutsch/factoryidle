{
  "name": "incremental-factory",
  "version": "1.0.6",
  "description": "Idle game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "incremental-factory.app.id",
    "productName": "Incremental Factory 1.0.6",
    "directories": {
      "output": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json",
      "dist/",
      "assets/",
      "icons/",
      "css/",
      "js/"
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "category": "public.app-category.games"
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sevdeutsch/factoryidle.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sevdeutsch/factoryidle/issues"
  },
  "homepage": "https://github.com/sevdeutsch/factoryidle#readme",
  "devDependencies": {
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0"
  }
}
